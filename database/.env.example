# Environment variables for Weaviate database
# Copy this file to .env and configure your settings

# OpenAI API Key for vectorization and generative AI
OPENAI_APIKEY=your_openai_api_key_here

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Database settings
WEAVIATE_BATCH_SIZE=100
WEAVIATE_TIMEOUT=30

# Recipe collection settings
RECIPE_CLASS_NAME=Recipe
RECIPE_INDEX_NAME=recipes
